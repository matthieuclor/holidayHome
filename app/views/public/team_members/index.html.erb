<div class="d-flex justify-content-center mt-6 mb-8">
  <h1>Qui sommes nous</h1>
</div>

<div class="d-flex justify-content-center">
  <div class="col-sm-10">
    <div class="d-flex flex-wrap">
      <% @team_members.each do |team_member| %>
        <div class="col-sm-4 col-md-3 mb-4">
          <div class="card">
            <% if team_member.photo.attached? %>
              <%= image_tag(team_member.photo.variant(resize_to_limit: [250, 250]), class: "card-img") %>
            <% end %>

            <div class="card-img-overlay d-flex p-0">
              <div class="mt-auto w-100">
                <div class="d-flex flex-column text-white bg-black-opacity p-2">
                  <span class="font-weight-bolder text-center">
                    <%= team_member.full_name %>
                  </span>
                  <span class="text-center no-opacity">
                    <%= team_member.function %>
                  </span>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
