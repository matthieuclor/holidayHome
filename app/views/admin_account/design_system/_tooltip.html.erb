<div class="card">
  <div class="card-body">
    <h3 class="mb-4">Tooltip</h3>

    <div class="d-flex justify-content-between mx-14">
      <button type="button"
              class="btn btn-sm btn-secondary"
              data-toggle="tooltip"
              data-placement="top"
              title="Tooltip on top">
        Tooltip on top
      </button>

      <button type="button"
              class="btn btn-sm btn-secondary"
              data-toggle="tooltip"
              data-placement="right"
              title="Tooltip on right">
        Tooltip on right
      </button>

      <button type="button"
              class="btn btn-sm btn-secondary"
              data-toggle="tooltip"
              data-placement="bottom"
              title="Tooltip on bottom">
        Tooltip on bottom
      </button>

      <button type="button"
              class="btn btn-sm btn-secondary"
              data-toggle="tooltip"
              data-placement="left"
              title="Tooltip on left">
        Tooltip on left
      </button>
    </div>
  </div>
</div>
