<div class="card my-3">
  <div class="card-body">
    <h2 class="mb-3">
      <%= fa_icon("users", "Utilisateurs par jour", class: "mr-2") %>
    </h2>

    <%= line_chart(@users_group_by_date) %>
  </div>
</div>

<div class="row">
  <div class="col-12 col-md-6">
    <div class="card my-3">
      <div class="card-body">
        <h2 class="mb-3">
          <%= fa_icon("users", "Utilisateurs actifs", class: "mr-2") %>
        </h2>

        <%= column_chart(@users_group_by_status) %>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-6">
    <div class="card my-3">
      <div class="card-body">
        <h2 class="mb-3">
          <%= fa_icon("thumbs-up", "Jours d'approbations", class: "mr-2") %>
        </h2>

        <%= pie_chart(@family_group_by_days_for_approval, suffix: " familles") %>
      </div>
    </div>
  </div>
</div>
