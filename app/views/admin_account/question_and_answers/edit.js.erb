if ($("#question-and-answer-modal").length > 0) {
  $("#question-and-answer-modal").modal("hide")
}

$("#modal-container").html("<%= j render "form" %>")

<% if flash.present? %>
  $("#toast-container").prepend("<%= j render "shared/flash_messages" %>")
  <% flash.clear %>
<% end %>

$("#question-and-answer-modal").modal("show")
