<div class="d-flex justify-content-center">
  <div class="col-11">
    <div class="card my-3">
      <div class="card-body py-0">
        <div class="d-flex align-content-center my-4">
          <h1 class="m-0 mr-auto">Articles</h1>
          <%= button_to "Réinitialiser",
                        admin_account_articles_path,
                        method: :get,
                        id: "reset-filter",
                        class: "btn btn-danger m-2 d-none" %>

          <div class="col-3 p-0">
          <%= search_form_for [:admin_account, @query], wrapper: :inline_form, remote: true do |f| %>
              <%= f.input :title_cont,
                          as: :string,
                          required: false,
                          input_html: {
                            class: "my-2",
                            placeholder: "Rechercher un article"
                          } %>
          <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-end mb-2">
          <%= link_to fa_icon("plus", "Créer" , class: "mr-1"),
                      new_admin_account_article_path,
                      remote: true,
                      class: "btn btn-outline-primary ml-auto" %>
        </div>

        <div id="articles-container">
          <%= render "articles" %>
        </div>
      </div>
    </div>
  </div>
</div>
