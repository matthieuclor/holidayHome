<h2 class="d-flex align-items-center">
  Messages :
  <span class="badge badge-secondary ml-2">
    <%= @pagy.count %>
  </span>
</h2>

<% @messages.each do |message| %>
  <div class="d-flex">
    <div class="rounded py-2 px-3 mb-3 w-100 bg-light">
      <div class="d-flex flex-row align-items-center justify-content-between">
        <%= link_to "#{message.user.first_name} #{message.user.last_name}",
                    admin_account_user_path(message.user),
                    class: 'font-weight-bold' %>

        <% if message.booking_approval.present? %>
          <%= booking_approval_status_badge(message.booking_approval.status) %>
        <% end %>
      </div>
      <div class="my-1">
        <%= simple_format(message.content) %>
      </div>
      <div class="d-flex flex-row align-items-center">
        <span class="ml-auto font-weight-lighter">
          Le 15 d√©cembre 2020
        </span>
      </div>
    </div>
  </div>
<% end %>

<% if @pagy.pages > 1 %>
  <div class="d-flex justify-content-center mt-2">
    <%== render "shared/bootstrap_pagy" %>
  </div>
<% end %>
