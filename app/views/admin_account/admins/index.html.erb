<div class="d-flex justify-content-center">
  <div class="col-11">
    <div class="card my-3">
      <div class="card-body py-0">
        <div class="d-flex align-content-center my-4">
          <h1 class="m-0 mr-auto">Administrateurs</h1>
          <%= button_to "RÃ©initialiser",
                        admin_account_admins_path,
                        method: :get,
                        id: "reset-filter",
                        class: "btn btn-danger m-2 d-none" %>

          <div class="col-3 p-0">
          <%= search_form_for [:admin_account, @query], wrapper: :inline_form, remote: true do |f| %>
              <%= f.input :first_name_or_last_name_or_email_cont,
                          as: :string,
                          required: false,
                          input_html: {
                            class: "my-2",
                            placeholder: "Rechercher un administrateur"
                          } %>
          <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <div id="admins-container">
          <%= render "admins" %>
        </div>
      </div>
    </div>
  </div>
</div>
