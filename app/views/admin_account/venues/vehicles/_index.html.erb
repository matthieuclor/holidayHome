<div class="card my-3">
  <div class="card-body">
    <h2 class="d-flex align-items-center">
      VÃ©hicule :
      <span class="badge badge-secondary ml-2">
        <%= @venue.vehicles.size %>
      </span>
    </h2>

    <% @venue.vehicles.each do |vehicle| %>
      <div class="border rounded p-3 mb-3">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <div>
            <div class="d-flex align-items-center">
              <div class="border border-dark rounded py-1 px-2 mr-2">
                Voiture
              </div>
              <h4 class="m-0">
                <%= vehicle.name %>
              </h4>
            </div>
          </div>

          <%= button_to edit_admin_account_venue_vehicle_path(@venue, vehicle),
                        method: :get,
                        class: "btn btn-sm btn-outline-warning",
                        remote: true do %>

            <%= fa_icon("pen") %>
          <% end %>
        </div>

        <div class="row">
          <div class="col-md-6 mb-2 mb-md-0">
            <span class="font-weight-bolder">
              Etat :
            </span>
            <span class="badge <%= Vehicle.human_attribute_name("condition_badge_class.#{vehicle.condition}") %>">
              <%= Vehicle.human_attribute_name("condition.#{vehicle.condition}") %>
            </span>
          </div>

          <div class="col-md-6">
            <span class="font-weight-bolder">
              Taille :
            </span>
            <span class="badge badge-secondary">
              <%= Vehicle.human_attribute_name("size.#{vehicle.size}") %>
            </span>
          </div>
        </div>
        <div class="mt-2">
          <span class="font-weight-bolder">
            Commentaire :
          </span>
          <p class="m-0 <%= 'text-muted' unless vehicle.comment.present? %>">
            <% if vehicle.comment.present? %>
              <%= vehicle.comment %>
            <% else %>
              Aucun commentaire
            <% end %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
