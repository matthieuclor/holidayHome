<div class="modal" id="vehicle-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">
          <% if action_name == "new" %>
            Créer un véhicule
          <% else %>
            Editer un véhicule
          <% end %>
        </h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [:admin_account, @vehicle.venue, @vehicle], remote: true do |f| %>
          <%= f.input :vehicle_type, input_html: { placeholder: "Vélo" } %>
          <%= f.input :name, input_html: { placeholder: "Vélo bleu" } %>

          <div class="row">
            <div class="col-6">
              <%= f.input :size, collection: Vehicle.sizes.keys.map { |size|
                [Vehicle.human_attribute_name("size.#{size}"), size]
              }, include_blank: false %>
            </div>

            <div class="col-6">
              <%= f.input :condition, collection: Vehicle.conditions.keys.map { |condition|
                [Vehicle.human_attribute_name("condition.#{condition}"), condition]
              }, include_blank: false %>
            </div>
          </div>

          <%= f.input :comment, input_html: { placeholder: 'Choses à savoir, précision sur le vehicule...' } %>

          <%= f.submit "Envoyer", class: "btn btn-block btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
