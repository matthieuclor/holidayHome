<div class="modal" id="digital-code-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title">
          <% if action_name == "new" %>
            Cr√©er un digicode
          <% else %>
            Editer un digicode
          <% end %>
        </h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [:admin_account, @digital_code.venue, @digital_code], remote: true do |f| %>
          <div class="row">
            <div class="col-6">
              <%= f.input :name, input_html: { placeholder: "Porte de la cave" } %>
            </div>
            <div class="col-6">
              <%= f.input :password, as: :string, input_html: { placeholder: "Mot de passe" } %>
            </div>
          </div>

          <%= f.submit "Envoyer", class: "btn btn-block btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
