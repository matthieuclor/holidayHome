
<div class="card my-3">
  <div class="card-body">
    <h2 class="d-flex align-items-center">
      Digicodes :
      <span class="badge badge-secondary ml-2">
        <%= @venue.digital_codes.size %>
      </span>
    </h2>

    <div class="list-group shadow-none">
      <% @venue.digital_codes.each do |digital_code| %>
        <%= link_to edit_admin_account_venue_digital_code_path(@venue, digital_code),
                    class: 'list-group-item list-group-item-action p-1',
                    remote: true do %>

          <span class="font-weight-bolder">
            Nom :
          </span>
          <span class="text-muted">
            <%= digital_code.name %>,
          </span>
          <span class="font-weight-bolder">
            Mot de passe :
          </span>
          <span class="text-muted">
            <%= digital_code.password %>
          </span>

          <%= fa_icon('pen', nil, class: 'ml-3') %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
