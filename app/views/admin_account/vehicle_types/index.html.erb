<div class="d-flex justify-content-center">
  <div class="col-11">
    <div class="card my-3">
      <div class="card-body py-0">
        <div class="d-flex align-content-center my-4">
          <h1 class="m-0 mr-auto">Types de Véhicules</h1>

          <%= button_to "Réinitialiser",
                        admin_account_vehicle_types_path,
                        method: :get,
                        id: "reset-filter",
                        class: "btn btn-danger m-2 d-none" %>
          <div class="col-5 p-0">
            <%= search_form_for [:admin_account, @query],
                                wrapper: :inline_form,
                                data: { autosubmit: true },
                                remote: true do |f| %>

              <div class="row d-flex align-items-center">
                <div class="col-12">
                  <%= f.input :name_i_cont,
                              as: :string,
                              label: false,
                              required: false,
                              input_html: {
                                class: "my-2",
                                placeholder: "Rechercher un nom"
                              } %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-end mb-2">
          <%= link_to fa_icon("plus", "Créer" , class: "mr-1"),
                      new_admin_account_vehicle_type_path,
                      remote: true,
                      class: "btn btn-outline-primary ml-auto" %>
        </div>

        <div id="vehicle-types-container">
          <%= render "vehicle_types" %>
        </div>
      </div>
    </div>
  </div>
</div>
