<div class="dropdown">
  <button class="btn btn-sm btn-secondary dropdown-toggle"
          type="button"
          id="dropdownUserButton"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false">

    <%= fa_icon("user", current_user.first_name, class: "mr-2") %>
  </button>

  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownUserButton">
    <% if controller_name == "public" %>
      <%= link_to fa_icon("user-circle", "Mon espace", class: "mr-2"),
                  user_account_dashboards_path,
                  class: "dropdown-item" %>
    <% end %>

    <%= link_to fa_icon("cog", "Paramètre", class: "mr-2"),
                user_account_settings_path,
                class: "dropdown-item" %>

    <%= link_to fa_icon("sign-out", "Déconnexion", class: "mr-2"),
                destroy_user_session_path,
                class: "dropdown-item",
                method: :delete %>
  </div>
</div>
