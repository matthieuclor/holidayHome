<!DOCTYPE html>
<html>
  <head>
    <title>HolidayHome | Gestion de maison de vancance familiale</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'public_vue' %>
    <%= stylesheet_pack_tag 'public_vue' %>
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top justify-content-between">
      <%= link_to root_path, class:"navbar-brand" do %>
        <span>Holiday</span>
        <span class="text-success">home</span>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <%= link_to new_user_session_path do %>
        <button class="btn btn-sm btn-primary" type="button">
          Connection
        </button>
      <% end %>
    </nav>

    <div class="container-fluid">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
  </body>
</html>
