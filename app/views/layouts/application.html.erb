<!DOCTYPE html>
<html>
  <head>
    <title>Hutoki | Gestion de maison de vancance familiale</title>
    <meta name="viewport" content="width=device-width, initial-scale=0.6, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <%= link_to root_path, class:"navbar-brand" do %>
        <span>Hutoki</span>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="d-flex flex-row ml-auto">
        <% if current_user.present? %>
          <%= render "user_account/layouts/user_dropdown" %>
        <% else %>
          <%= link_to new_user_session_path, remote: true do %>
            <button class="btn btn-sm btn-info" type="button">
              Se connecter
            </button>
          <% end %>

          <%= link_to new_user_registration_path do %>
            <button class="btn btn-sm btn-outline-info ml-2" type="button">
              Cr√©er son compte
            </button>
          <% end %>
        <% end %>
      </div>
    </nav>

    <div class="container-fluid">
      <%= yield %>
    </div>

    <div id="modal-container"></div>
    <div id="toast-container">
      <%= render "./shared/flash_messages" %>
    </div>
  </body>
</html>
