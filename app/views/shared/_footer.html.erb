<footer class="container-fluid border-top border-gray-200 bg-light mt-3">
  <div class="d-flex justify-content-center text-muted">
    <div class="col-sm-11 my-5">
      <div class="d-flex flex-column flex-sm-row justify-content-sm-around">
        <ul class="list-group shadow-none">
          <li class="list-group-item p-1 bg-light">
            <h6 class="mb-1 text-muted text-uppercase">Hutoki</h6>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= link_to "À propos", about_path, class: "text-muted" %>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= link_to "Notre équipe", team_members_path, class: "text-muted" %>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= link_to "Nos offres", pricing_path, class: "text-muted" %>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= link_to "Aide & F.A.Q", question_and_answers_path, class: "text-muted" %>
          </li>
        </ul>

        <hr class="border-gray-200 w-100 d-sm-none">

        <ul class="list-group shadow-none">
          <li class="list-group-item p-1 bg-light">
            <h6 class="mb-1 text-muted text-uppercase">Retrouvez nous</h6>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= link_to "Blog", articles_path, class: "text-muted" %>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= link_to t('social.facebook.url'), class: "text-muted", target: "_blank" do %>
              <%= fa_icon("facebook-square", nil, { class: "fa-1-25x mr-2", prefix: "fab" }) %>
            <% end %>

            <%= link_to t('social.instagram.url'), class: "text-muted", target: "_blank" do %>
              <%= fa_icon("instagram", nil, { class: "fa-1-25x mr-2", prefix: "fab" }) %>
            <% end %>

            <%= link_to t('social.twitter.url'), class: "text-muted", target: "_blank" do %>
              <%= fa_icon("twitter-square", nil, { class: "fa-1-25x mr-2", prefix: "fab" }) %>
            <% end %>

            <%= link_to t('social.linkedin.url'), class: "text-muted", target: "_blank" do %>
              <%= fa_icon("linkedin", nil, { class: "fa-1-25x", prefix: "fab" }) %>
            <% end %>
          </li>
        </ul>

        <hr class="border-gray-200 w-100 d-sm-none">

        <ul class="list-group shadow-none">
          <li class="list-group-item p-1 bg-light">
            <h6 class="mb-1 text-muted text-uppercase">Contact</h6>
          </li>
          <li class="list-group-item p-1 bg-light">
            <%= t("contact.email") %>
          </li>
        </ul>
      </div>

      <hr class="border-gray-200">

      <div class="text-sm-center pt-1">
        <p class="mb-1 text-grey-200">
          Copyright © <%= Date.current.year %> Hutoki Tout droits réservés
        </p>
        <p class="mb-0">
          <span>
            <%= link_to "Sitemap", sitemaps_path, class: "text-muted" %>
          </span>
          <span>•</span>
          <span>
            <%= link_to "Conditions général d'utilisation", cgu_path, class: "text-muted" %>
          </span>
          <span>•</span>
          <span>
            <%= link_to "Mentions légales", company_details_path, class: "text-muted" %>
          </span>
          <span>•</span>
          <span>
            <%= link_to "Politique des cookies", privacy_policy_path, class: "text-muted" %>
          </span>
        </p>
      </div>
    </div>
  </div>
</footer>
