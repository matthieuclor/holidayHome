<% flash.each_with_index do |(key, value), index| %>
  <% next if key == "timedout" %>

  <div id="toast_<%= key %>_<%= index %>"
      class="toast <%= t("flash.class.#{key}") %>"
      role="alert"
      aria-live="assertive"
      aria-atomic="true"
      data-delay="4000">

    <div class="toast-body">
      <div class="d-flex flex-row">
        <div class="fa-toast-type mr-3 mt-2">
          <%= fa_icon(t("flash.icon.#{key}")) %>
        </div>

        <div class="text-white font-weight-bold mt-1 mr-2">
          <%= value.html_safe %>
        </div>

        <button type="button"
                class="ml-auto mt-n1 close text-white"
                data-dismiss="toast" aria-label="Close">

          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>

  <script>
    $("#toast_<%= key %>_<%= index %>").toast("show");
  </script>
<% end %>
