if ($("#invitation-modal").length > 0) {
  $("#invitation-modal").modal("hide")
}

<% if flash.present? %>
  $("#toast-container").prepend("<%= j render "shared/flash_messages" %>")
  <% flash.clear %>
<% end %>

<% if @plan_error %>
  $("#plan-info-container").html("<%= j render "./shared/plan_info_card" %>")
  Turbolinks.dispatch("turbolinks:load")
<% else %>
  $("#modal-container").html("<%= j render "modal_form" %>")
  $("#invitation-modal").modal("show")
<% end %>
