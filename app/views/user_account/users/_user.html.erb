<div class="modal" id="user-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="media">
          <%= user_avatar(@user,
                          format: [100, 100],
                          avatar_class:"align-self-center rounded mr-3 ml-2") %>

          <div class="media-body">
            <h5 class="mt-0 text-dark">
              <%= @user.full_name %>
            </h5>

            <ul class="list-unstyled m-0">
              <% if @user.phone.present? %>
                <li>
                  <span class="text-dark">
                    <%= fa_icon("phone", nil, class: "mr-2") %>
                  </span>
                  <a href="tel:<%= @user.phone.gsub(/ /, '') %>" class="text-muted">
                    <%= @user.phone %>
                  </a>
                </li>
              <% end %>
              <li>
                <span class="text-dark">
                  <%= fa_icon("envelope", nil, class: "mr-2") %>
                </span>
                <a href="mailto:<%= @user.email %>" class="text-muted">
                  <%= @user.email %>
                </a>
              </li>
              <% if @user.address.present? %>
                <li>
                  <span class="text-dark">
                    <%= fa_icon("map-marked", nil, class: "mr-2") %>
                  </span>
                  <span class="text-muted">
                    <%= @user.address %>
                  </span>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
