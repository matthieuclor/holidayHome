<div class="d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="my-4">Param√®tre du compte</h1>
    <ul class="nav nav-tabs mb-2" role="tablist">
      <li class="nav-item">
        <a class="nav-link active" id="edit-account-tab" data-toggle="tab" href="#edit-account" role="tab" aria-controls="edit-account" aria-selected="true">
          Mon profile
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="edit-password-tab" data-toggle="tab" href="#edit-password" role="tab" aria-controls="edit-password" aria-selected="false">
          Mon mot de passe
        </a>
      </li>
      <li class="nav-item">
        <%= link_to 'Gestion du plan', user_account_plans_path, remote: true, class: 'nav-link', id: 'plan-tab', data: { toggle: 'tab', target: '#plan' }, role: 'tab' %>
      </li>
      <li class="nav-item">
        <a class="nav-link" id="deactivate-account-tab" data-toggle="tab" href="#deactivate-account" role="tab" aria-controls="deactivate-account" aria-selected="false">
          Gestion du compte
        </a>
      </li>
    </ul>

    <div class="card">
      <div class="card-body">
        <div class="tab-content">
          <div class="tab-pane fade show active" id="edit-account" role="tabpanel" aria-labelledby="edit-account-tab">
            <%= render "shared/spinner" %>
          </div>
          <div class="tab-pane fade" id="edit-password" role="tabpanel" aria-labelledby="edit-password-tab">
            <%= render "shared/spinner" %>
          </div>
          <div class="tab-pane fade" id="plan" role="tabpanel" aria-labelledby="plan-tab">
            <%= render "shared/spinner" %>
          </div>
          <div class="tab-pane fade" id="deactivate-account" role="tabpanel" aria-labelledby="deactivate-account-tab">
            <%= render "shared/spinner" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('turbolinks:load', function() {
    $.ajax({ url: "<%= edit_user_registration_path %>" })
  })
</script>
