<div class="w-75 rounded py-2 px-3 mb-3 <%= message_class(message.user) %>">
  <div class="d-flex flex-row align-items-center">
    <%= link_to user_account_user_path(message.user),
                class: "text-decoration-none",
                remote: true do %>
      <span class="font-weight-light <%= message_text_class(message.user) %>">
        <%= message.user.first_name %>
        <%= message.user.last_name %>
      </span>
    <% end %>
  </div>

  <div class="my-1">
    <span>
      <%= message.content %>
    </span>
  </div>

  <div class="d-flex flex-row align-items-center">
    <span class="ml-auto font-weight-lighter">
      <%= "Le #{l(message.created_at, format: :medium)}" %>
    </span>
  </div>
</div>
