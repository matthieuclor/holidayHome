<div class="d-flex justify-content-center align-items-center mt-4">
  <h1>
    Demande de réservation pour
    <%= @booking.venue.name %>
  </h1>
</div>

<div class="d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <div class="card border-0 shadow">
      <div class="card-body">
        <div class="row">
          <div class="col-6">
            <%= venue_photos(@booking.venue, format: [400, 200]) %>
          </div>
          <div class="col-6">
            <p class="mb-2">
              <%= fa_icon("user") %>
                <%= link_to user_account_user_path(@booking.user),
                            class: "text-decoration-none",
                            remote: true do %>
                <span class="text-muted ml-2">
                  <%= @booking.user_full_name %>
                </span>
              <% end %>
            </p>

            <p class="mb-2">
              <%= fa_icon("calendar-alt") %>
              <span class="text-muted ml-2">
                <%= booking_date_range(@booking) %>
              </span>
            </p>

            <div class="mb-2 d-flex align-items-center">
              <%= fa_icon("info-circle", nil, class: "mr-2") %>
              <%= booking_status_badge(@booking.status) %>
            </div>

            <% unless @booking.canceled? %>
              <div>
                <%= fa_icon("hourglass-half") %>
                <span class="text-muted ml-2">
                  Deadline
                </span>
                <div class="mt-2">
                  <%= booking_progress_deadline(@booking) %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row mt-2 d-flex align-items-center">
          <div id="booking_approvals_container" class="col-6">
            <% if @booking.booking_approvals.present? %>
              <%= render "booking_approvals" %>
            <% end %>
          </div>
          <div class="col-6">
            <% if @booking.pending? %>
              <% if @booking.user == current_user %>
                <%= button_to user_account_booking_path(@booking),
                              method: :put,
                              params: { booking: { status: "canceled" } },
                              class: "btn btn-sm btn-block btn-danger",
                              data: {
                                confirm: "La réservation sera annulée définitivement, êtes vous sûr ?"
                              } do %>

                  <%= fa_icon("trash", "Annuler la réservation", class: "mr-2") %>
                <% end %>
              <% elsif @booking_approval&.pending? %>
                <div id="approval_actions_container">
                  <%= button_to edit_user_account_booking_booking_approval_path(@booking, @booking_approval),
                                method: :get,
                                params: { booking_approval: { status: "accepted" } },
                                class: "btn btn-sm btn-block btn-success mb-2",
                                remote: true do %>

                    <%= fa_icon("thumbs-up", "Approuver la réservation", class: "mr-2") %>
                  <% end %>

                  <%= button_to edit_user_account_booking_booking_approval_path(@booking, @booking_approval),
                                method: :get,
                                params: { booking_approval: { status: "refused" } },
                                class: "btn btn-sm btn-block btn-danger",
                                remote: true do %>

                    <%= fa_icon("thumbs-down", "Rejeter la réservation", class: "mr-2") %>
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div id="messages-container">
      <%= render "shared/spinner" %>
    </div>
  </div>
</div>

<script>
  Rails.ajax({
    url: "<%= user_account_booking_messages_path(@booking) %>",
    type: "get"
  })
</script>
