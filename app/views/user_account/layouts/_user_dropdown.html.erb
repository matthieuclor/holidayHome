<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle"
          type="button"
          id="dropdownUserButton"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false">

    <%= current_user.first_name %>
  </button>

  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownUserButton">
    <% if controller.class.module_parent.to_s == 'Public' %>
      <%= link_to fa_icon("user-circle", "Mon espace", class: "mr-2"),
                  user_account_dashboards_path,
                  class: "dropdown-item" %>
    <% end %>

    <%= link_to fa_icon("users", "Familles", class: "mr-2"),
                user_account_families_path,
                class: "dropdown-item" %>

    <%= link_to fa_icon("mailbox", "Invitations reçues", class: "mr-2"),
                user_account_received_invitations_path,
                class: "dropdown-item" %>

    <%= link_to fa_icon("bells", "Notifications", class: "mr-2"),
                user_account_notifications_path,
                class: "dropdown-item" %>

    <%= link_to fa_icon("cog", "Paramètre", class: "mr-2"),
                user_account_settings_path,
                class: "dropdown-item" %>

    <%= link_to fa_icon("sign-out", "Déconnexion", class: "mr-2"),
                destroy_user_session_path,
                class: "dropdown-item",
                method: :delete %>
  </div>
</div>
