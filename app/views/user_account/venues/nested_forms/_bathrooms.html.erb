<h4 class="d-flex align-items-center mb-3">
  Salle de bains :
  <span class="badge badge-secondary ml-2">
    {{countObject(venue.bathrooms)}}
  </span>
</h4>

<div v-for="(bathroom, bathroomIndex) in venue.bathrooms" :key="`bathroom-${bathroomIndex}`">
  <div v-show="!bathroom.Destroy">
    <div class="shadow p-3 rounded mb-3">
      <div class="form-group hidden venue_bathrooms_id">
        <input v-model="bathroom.id"
                type="hidden"
                :name="`venue[bathrooms_attributes][${bathroomIndex}][id]`"
                :id="`venue_bathrooms_attributes_${bathroomIndex}_id`"
                class="form-control hidden">
      </div>

      <div class="form-row">
        <div class="col-6">
          <div class="form-group string required venue_bathrooms_name"
              :class="formGroupClass(bathroom, 'name')">

            <label class="string required" :for="`venue_bathrooms_attributes_${bathroomIndex}_name`">
              Nom <abbr title="obligatoire">*</abbr>
            </label>

            <input v-model="bathroom.name"
                  class="form-control string required"
                  :class="inputClass(bathroom, 'name')"
                  required="required"
                  aria-required="true"
                  type="text"
                  :name="`venue[bathrooms_attributes][${bathroomIndex}][name]`"
                  :id="`venue_bathrooms_attributes_${bathroomIndex}_name`"
                  placeholder="Salle de bain d'été">

            <div v-for="bathroomError in bathroom.errors['name']" class="invalid-feedback">
              {{bathroomError}}
            </div>
          </div>
        </div>

        <div class="col-6 d-flex justify-content-end align-items-start">
          <button @click.prevent="removeObject('bathroom', bathroomIndex)" class="btn btn-danger">
            <%= fa_icon("trash") %>
          </button>
        </div>
      </div>

      <div class="form-group hidden venue_bathrooms__destroy m-0">
        <input v-model="bathroom.Destroy"
              class="form-control hidden"
              type="hidden"
              value="false"
              :name="`venue[bathrooms_attributes][${bathroomIndex}][_destroy]`"
              :id="`venue_bathrooms_attributes_${bathroomIndex}__destroy`">
      </div>
    </div>
  </div>
</div>

<button @click.prevent="addObject('bathroom')" class="btn btn-primary">
  <%= fa_icon("plus", "Ajouter une salle de bain", class: "mr-2") %>
</button>
