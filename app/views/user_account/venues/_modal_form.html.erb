<div class="modal" id="venue-modal" data-backdrop="static" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header border-0">
        <h3 class="modal-title">
          <% if action_name == "new" %>
            Créer un lieu
          <% else %>
            Editer un lieu
          <% end %>
        </h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for [:user_account, @venue], remote: true do |f| %>
          <div class="d-flex justify-content-center">
            <div class="col-11">
              <%= f.input :photos, as: :file, input_html: { multiple: true } %>
              <%= f.input :name, input_html: { placeholder: "chalet à la montagne" } %>
              <%= f.input :address, input_html: { placeholder: "12 Rue de Bellecote" } %>
              <%= f.input :city, as: :hidden %>
              <%= f.input :postcode, as: :hidden %>
              <%= f.input :country, as: :hidden %>
              <%= f.input :country_code, as: :hidden %>
              <%= f.input :administrative, as: :hidden %>
              <%= f.input :county, as: :hidden %>
              <%= f.input :lat, as: :hidden %>
              <%= f.input :lng, as: :hidden %>
              <%= f.input :creator_id, as: :hidden %>
              <%= f.input :family_id, as: :hidden %>
            </div>
          </div>

          <hr>
          <%= render "user_account/venues/nested_forms/bedrooms", form: f %>
          <hr>
          <%= render "user_account/venues/nested_forms/bathrooms", form: f %>
          <hr>
          <%= render "user_account/venues/nested_forms/keys", form: f %>
          <hr>
          <%= render "user_account/venues/nested_forms/networks", form: f %>
          <hr>
          <%= render "user_account/venues/nested_forms/digital_codes", form: f %>
          <hr>
          <%= render "user_account/venues/nested_forms/home_services", form: f %>

          <br>

          <div class="d-flex justify-content-center">
            <div class="col-11">
              <%= f.input :comment,
                          label: "Commentaire",
                          input_html: {
                            placeholder: "Choses a savoir, bon plan, précision sur le lieu..."
                          } %>

              <%= f.input :editable_for_others,
                          wrapper: :custom_boolean_switch,
                          label: "Editable par les autres" %>

              <%= f.submit "Envoyer", class: "btn btn-block btn-success" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
