<div class="d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="my-4">Espace utilisateur</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email,
                  autofocus: true,
                  input_html: {
                    placeholder: "jean.dupont@mail.com",
                    autocomplete: "email"
                  } %>

      <%= f.input :password,
                  wrapper_html: { class: "m-0" },
                  input_html: { autocomplete: "current-password" },
                  required: true %>

      <%= fa_icon("eye", "Voir le mot de passe", class: "password-eye") %>

      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <%= f.submit "Se connecter", class: "btn btn-block btn-success" %>
    <% end %>

    <br>

    <%= render "user_account/authentification/shared/links" %>
  </div>
</div>
