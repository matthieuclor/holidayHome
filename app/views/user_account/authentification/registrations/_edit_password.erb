<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, id: "edit-password" }) do |f| %>
  <%= f.input :current_password, required: true %>
  <%= f.input :password, label: "Nouveau mot de passe", required: true %>
  <%= f.input :password_confirmation, required: true %>
  <%= f.submit "Envoyer", class: "btn btn-block btn-success" %>
<% end %>
