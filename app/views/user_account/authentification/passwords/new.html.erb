<div class="d-flex justify-content-center">
  <div class="col-md-8 col-lg-6">
    <h1 class="my-4">Réinitialiser mon mot de passe</h1>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.input :email,
                  autofocus: true,
                  input_html: { placeholder: "jean.dupont@mail.com" } %>

      <%= f.submit "Envoyer le mail de réinitialisation", class: "btn btn-block btn-success" %>
    <% end %>

    <br>

    <%= render "user_account/authentification/shared/links" %>
  </div>
</div>


